<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8BC34A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodItemDetails">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/apples"
        android:layout_width="180dp"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp" />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@id/logo"
        android:background="@drawable/raw"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


     <TextView
         android:id="@+id/detsFoodName"
         android:text="sfsd"
         android:textSize="19sp"
         android:layout_marginTop="18dp"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"  />

      <TextView
          android:id="@+id/detsCaloriesTitle"
          android:text="calories"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/detsCaloriesValue"
          android:text="200"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="18dp"
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/detsDateText"
          android:text="Consumed on.."
          android:textSize="14sp"
          android:layout_marginTop="14dp"
          android:layout_gravity="center_horizontal"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/detsShareButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:backgroundTint="#1E84FD"
            android:text="@string/share_title" />
    </LinearLayout>

</RelativeLayout>